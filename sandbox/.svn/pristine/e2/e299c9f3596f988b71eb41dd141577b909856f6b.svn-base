solution "Beta Cells"
	configurations { "Debug", "Local", "Fedora", "Cluster" }

project "Beta Cells"
	language		 "C++" 
	kind			 "ConsoleApp" 
	files			{ "**.hpp","**.cpp" }
	links		 	{ "gomp", "superlu" }
	buildoptions 	{
					  "-std=c++11",
					  "-fopenmp",
					  "-DLOAD_SUPERLU",
					  "-I $$INSILICOROOT"
					  					}


	configuration 	 	{ "Debug" }
		defines 	 	{ "_DEBUG", "DEBUG" }
		flags		 	{ "Symbols" } 
		buildoptions	{ 	
							"-isystem /usr/include/eigen3", 
							"-I /usr/include/superlu"
						}
		targetname	  	 "Beta_Cells_debug" 

	configuration		{ "Local" }
		defines			{ "NDEBUG" }
		flags			{ "OptimizeSpeed" }
		buildoptions	{ 	
							"-isystem /usr/include/eigen3", 
							"-I /usr/include/superlu"
						}
		targetname		 "Beta_Cells"

	configuration		{ "Fedora" }
		defines			{ "_DEBUG", "DEBUG" }
		flags			{ "Symbols" }
		buildoptions	{ 	
							"-isystem /usr/include/eigen3", 
							"-I /usr/include/SuperLU"
						}
		targetname		 "Beta_Cells"


	configuration		{ "Cluster" } 
		defines			{ "NDEBUG" }
		flags			{ "OptimizeSpeed" }
		buildoptions	{ 
							"-isystem ~/lib/Eigen",
							"-I ~/lib/superlu"
						}
		targetname		 "Beta_Cells"

